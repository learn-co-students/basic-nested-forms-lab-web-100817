<%= form_for @recipe do |f| %>
  Recipe Title: <%= f.text_field :title %><br>
  <%= f.fields_for :ingredients do |ingred| %>
  <label>Ingredient: </label> <br>
    <%= ingred.label :name %>
    <%= ingred.text_field :name %><br>
    <%= ingred.label :quantity %>
    <%= ingred.text_field :quantity %><br>
  <% end %>
  <%= f.submit %>
<% end %>
